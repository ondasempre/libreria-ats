<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>libreria</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Area riservata</web-resource-name>
      <url-pattern>/report.jsp</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>manager-gui</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Autenticazione</realm-name>
  </login-config>
  <servlet>
    <servlet-name>aggiungi</servlet-name>
    <servlet-class>com.ats.servlet.AggiungiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>aggiungi</servlet-name>
    <url-pattern>/aggiungi</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>rimuovi</servlet-name>
    <servlet-class>com.ats.servlet.RimuoviServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>rimuovi</servlet-name>
    <url-pattern>/rimuovi</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>salvalibro</servlet-name>
    <servlet-class>com.ats.servlet.SalvalibroServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>salvalibro</servlet-name>
    <url-pattern>/salvalibro</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>modificalibro</servlet-name>
    <servlet-class>com.ats.servlet.ModificaLibri</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>modificalibro</servlet-name>
    <url-pattern>/modificalibro</url-pattern>
  </servlet-mapping>
</web-app>